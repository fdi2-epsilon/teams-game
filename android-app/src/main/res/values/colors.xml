<resources>

    <!-- Colors from Material Design guidelines: -->
    <!-- http://www.google.com/design/spec/style/color.html#color-color-palette -->

    <!-- Used as default ActionBar background -->
    <color name="colorPrimary">#2196f3</color>
    <color name="alphaColorPrimary">#dd2196f3</color>

    <!-- Used as default color for the StatusBar -->
    <color name="colorPrimaryDark">#1976d2</color>
    <color name="alphaColorPrimaryDark">#dd1976d2</color>

    <!-- Default value for 'colorControlActivated', used to tint widgets -->
    <color name="colorAccent">#ffab40</color>


    <!-- Progress bar style in main activity cards -->
    <color name="mainCardProgressBarPrimary">#00BCD4</color>
    <color name="mainCardProgressBarSecondary">#3000</color>

    <!-- Window background -->
    <color name="windowBackground">#e8e8e8</color>

    <!-- Can be set: -->
    <!-- 'colorControlNormal', 'colorControlActivated', 'colorControlHighlight', 'colorSwitchThumbNormal' -->
</resources>
